<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".OtpPhoneActivity"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/logowhite"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good health starts here"
            android:textSize="25sp"
            android:fontFamily="@font/poppinsbold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="Please enter your phone number"
            android:gravity="center"
            android:textColor="#728b8d"
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:fontFamily="@font/poppinsregular"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="+880"
                app:hintTextColor="@color/black"
                app:boxStrokeColor="@color/dark_green"
                app:cursorColor="@color/black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:textColor="@color/black"
                    android:inputType="phone"
                    />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/termsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You agree to our Terms, Conditions and Privacy Policy"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="12sp"
            android:textColor="@color/grey"


            />
    </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"

            android:text="Next"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:textSize="20sp"
            android:fontFamily="@font/poppinsbold"
            android:id="@+id/login"
            style="@style/Widget.MaterialComponents.Button.TextButton"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Or,"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="15sp"
                android:textColor="@color/grey"


                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login by using password"
                android:textSize="15sp"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/dark_green"
                style="?attr/borderlessButtonStyle"
                />
        </LinearLayout>

    </LinearLayout>
    





</ScrollView>